{
  "manifest_version": 3,
  "name": "Cert Monitor Extension",

  "version": "1.0",
  "description": "Giám sát chứng chỉ SSL/TLS cho đồ án An toàn mạng.",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png"
    }
  },
  "permissions": [
    "activeTab", 
    "tabs",
    "webRequest",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:8080/"
  ],
  "background": {
    "service_worker": "background.js"
  }
}